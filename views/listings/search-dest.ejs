<%- include("../layouts/boilerplate") %>
<link rel="stylesheet" href="/CSS/style.css">
<body>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <%for(list of listings){%>
        <a href="/listings/<%= list.id%>" class="listing-link">
            <div class="card listing-card offset-1" style="width: 25rem;">
                <img src="<%= list.image.url %>" class="card-img-top" alt="Listing_image" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text"> 
                    <b><%= list.title %></b><br>
                    &#8377;<%= list.price%>/night &nbsp; &nbsp; <i class="gstToggle">+18% GST</i>
                  </p>
                </div>
            </div>
        </a>
    <%}%>
</div>
<%- include("../includes/footer.ejs") %>
<script src="/js/script.js"></script>
</body>