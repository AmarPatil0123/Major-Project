<%- include("../layouts/boilerplate") %>
<link rel="stylesheet" href="/CSS/style.css">
<style>
    #filters{
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        margin-left: 4rem;
    }

    .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        margin-bottom: 1rem;
        opacity: .7;
    }

    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }

    .active{
        opacity: 1;
    }

    .gstToggle{
        display: none;
    }

    .form-switch{
        border: 2px solid black;
        padding: .8rem 1rem 0.8rem 1rem;
        border-radius: 1rem;
        margin-left: 4rem;
    }
</style>
<body>
    <div id="filters">
        <div class="filter active">
            <div><i class="fa-solid fa-house-chimney"></i></div>
            <p>Cabins</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-house-medical-flag"></i></div>
            <p>National parks</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Amazing views</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-codepen"></i></i></div>
            <p>A-frames</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Countryside</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-money-bill-wheat"></i></div>
            <p>Design</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-satellite"></i></i></div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-cannabis"></i></div>
            <p>Amazing pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-satellite"></i></i></div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-cannabis"></i></div>
            <p>Amazing pools</p>
        </div>
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total before taxes</label>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
        <%for(list of allListings){%>
            <a href="/listings/<%= list.id%>" class="listing-link">
                <div class="card listing-card offset-1" style="width: 25rem;">
                    <img src="<%= list.image.url %>" class="card-img-top" alt="Listing_image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text"> 
                        <b><%= list.title %></b><br>
                        &#8377;<%= list.price%>/night &nbsp; &nbsp; <i class="gstToggle">+18% GST</i>
                      </p>
                    </div>
                </div>
            </a>
        <%}%>
    </div>
    <%- include("../includes/footer.ejs") %>
    <script src="/js/script.js"></script>
</body>
<script>
    let taxToggle=document.getElementById("flexSwitchCheckDefault");
    taxToggle.addEventListener("click",()=>{
        let gstToggle=document.getElementsByClassName("gstToggle");
        for(gst of gstToggle){
            if(gst.style.display !="inline"){
                gst.style.display="inline";

            }else{
                gst.style.display="none ";

            }
        }
    })
</script>



